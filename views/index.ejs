<!DOCTYPE html>
<html lang="en" class="h-100">
  <% include ./partials/head.ejs %>
  <body 
    onload="mongoGetAllEvents('<%= events %>')"
    class="d-flex flex-column h-100 center-ui"
  >
    <div class="nav">
      <span></span>
      <span>Manifest</span>
      <a href="./events/new"> 
        <% if (loggedIn) { %>
          <img
          src="https://image.flaticon.com/icons/svg/149/149156.svg"
          class="small-image"
          id="new-event"/>
        <% } %>
      </a>
    </div>

    <main role="main" class="flex-shrink-0">
      <div class="offline_div" id="offline_div" style="display: none">
        You are offline
      </div>
      <div class="top-container">
        <div class="row">
          <img src="https://i.imgur.com/Emu3Xbb.jpg" class="e-image" />
        </div>
      </div>
      <div class="section">
        <div class="st-title">
          Trending
        </div>
        <div class="st-galery" id="events"></div>
      </div>
      <div class="section">
        <div class="st-title">
          Near you
        </div>
        <div class="st-galery" id="near-events"></div>
      </div>
      <div class="section">
        <div class="st-title">
          Past events
        </div>
        <div class="st-galery" id="past-events"></div>
      </div>
      <div class="empty"></div>
    </main>

    <% include ./partials/footer.ejs %>
  </body>
</html>
